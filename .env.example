# Teya Payment Gateway Credentials (Restful Payment Gateway - RPG)
# Copy this file to .env and fill in your actual credentials
# Get your credentials from Teya after approval

# Teya API Tokens
# You will receive these from Teya/B-Online portal
TEYA_PRIVATE_TOKEN=your_private_token_here
TEYA_PUBLIC_TOKEN=your_public_token_here

# Environment (test or production)
# test = uses test.borgun.is
# production = uses api.borgun.is (or production URL from Teya)
TEYA_ENVIRONMENT=test

# Base URL (optional - defaults based on environment)
# Test: https://test.borgun.is/rpgapi
# Production: https://api.borgun.is/rpgapi
TEYA_BASE_URL=https://test.borgun.is/rpgapi

# n8n Webhook for COO-Agent
# This webhook is called when payment succeeds to trigger roadmap generation
N8N_ROADMAP_WEBHOOK=https://lioratech.app.n8n.cloud/webhook/roadmap-request

# Site URL (for payment redirects)
URL=https://lioratech.is
