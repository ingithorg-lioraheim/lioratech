# Teya Payment Gateway - Hosted Payment Page (SecurePay)
# Copy this file to .env and fill in your actual credentials
# See TEYA-PAYMENT-SETUP.md for full documentation

# Teya Test Environment
TEYA_TEST_MERCHANT_ID=test_merchant_id
TEYA_TEST_SECRET_KEY=your_test_secret_key_here
VITE_TEYA_TEST_ENDPOINT=https://test.borgun.is/SecurePay/default.aspx

# Teya Production Environment
TEYA_MERCHANT_ID=your_merchant_id_here
TEYA_GATEWAY_ID=your_gateway_id_here
TEYA_SECRET_KEY=your_production_secret_key_here
VITE_TEYA_PROD_ENDPOINT=your_production_endpoint_here

# Teya Mode (test | production)
VITE_TEYA_MODE=test

# Payment Callback URLs
VITE_PAYMENT_SUCCESS_URL=https://lioratech.is/payment-success
VITE_PAYMENT_ERROR_URL=https://lioratech.is/payment-error
VITE_PAYMENT_CALLBACK_URL=https://lioratech.is/.netlify/functions/payment-callback

# n8n Webhook for COO-Agent
# This webhook is called when payment succeeds to trigger roadmap generation
N8N_ROADMAP_WEBHOOK=https://lioratech.app.n8n.cloud/webhook/roadmap-request

# Site URL (for payment redirects)
URL=https://lioratech.is
